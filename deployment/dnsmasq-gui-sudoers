# Allow dnsmasq-gui service user to manage dnsmasq service
dnsmasq-gui ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart dnsmasq
dnsmasq-gui ALL=(ALL) NOPASSWD: /usr/bin/systemctl reload dnsmasq
dnsmasq-gui ALL=(ALL) NOPASSWD: /usr/bin/systemctl status dnsmasq
dnsmasq-gui ALL=(ALL) NOPASSWD: /usr/local/bin/dnsmasq-restart
dnsmasq-gui ALL=(ALL) NOPASSWD: /usr/local/bin/dnsmasq-reload
